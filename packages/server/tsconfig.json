{
    "compilerOptions": {
        "baseUrl": ".",
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "module": "commonjs",
        "outDir": "build",
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        "moduleResolution": "node",
        "paths": {
            "@app": ["src/app"],
            "@connection/*": ["src/connection/*"],
            "@entities/*": ["src/entities/*"],
            "@routes": ["src/routes"],
            "@shared/*": ["src/shared/*"],
            "@spec/*": ["spec/*"],
            "@server": ["src/Server"],
            "@shared-types/*": ["../shared-types/lib/*"]
        },
        "types": ["node"],
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["src/**/*.ts", "spec/**/*.ts"],
    "exclude": ["src/public/"]
}
